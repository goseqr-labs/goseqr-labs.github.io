---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
 {
  index: 1,
  titleTop: "Engineering",
  titleBottom: "Services",
  img: c1,
  alt: "SEO",
  desc: "We provide end-to-end engineering solutions that integrate privacy, safety, and security compliance into your product development. Our thorough testing and validation ensure your products meet GDPR, ISO 26262, and ISO 21434 standards."
},
  {
    index: 2,
    titleTop: "Audit ",
    titleBottom: "Services",
    img: c2,
    alt: "SEO",
    desc:"Our audit services offer a comprehensive review of your systems to identify compliance gaps. We ensure alignment with privacy and security regulations through rigorous verification, system testing, and documentation audits, enabling proactive compliance maintenance."

  },
  {
    index: 2,
    titleTop: "Assessment ",
    titleBottom: "Services",
    img: c3,
    alt: "SEO",
    desc:"Our assessment services specialize in privacy, security, and safety risk analysis, offering DPIAs, RoPAs, and PIAs. We provide thorough evaluations and actionable insights, ensuring robust data protection and compliance with established testing protocols."
  },
  /*
{
  index: 1,
  titleTop: "Email",
  titleBottom: "Marketing",
  img: c4,
  alt: "SEO",
  link: "https://google.com",
},
{
  index: 2,
  titleTop: "Content",
  titleBottom: "Creation",
  img: c5,
  alt: "SEO",
  link: "https://google.com",
},
{
  index: 3,
  titleTop: "Analytics and",
  titleBottom: "Tracking",
  img: c6,
  alt: "SEO",
  link: "https://google.com",
}
*/
];

const description =
  "In addition to our GoSeqr product, Goismo offers specialized services to support engineering, compliance audits, and assessments, with a focus on robust testing and verification.";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-2 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            desc={card.desc}
          />
        ))
      }
    </div>
  </div>
</Section>
