---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Engineering ",
    titleBottom: "Services",
    img: c1,
    alt: "SEO",
    desc: "Our engineering services provide end-to-end solutions that integrate privacy, safety, and security compliance directly into your product development cycle. This includes thorough testing, verification, and validation processes to ensure your products meet the rigorous standards of GDPR, ISO 26262, and ISO 21434. Our team assists with initial design, system integration, and iterative testing to guarantee your solution is both compliant and optimized for performance.",
  },
  {
    index: 2,
    titleTop: "Audit ",
    titleBottom: "Services",
    img: c2,
    alt: "SEO",
    desc:"Goismo's audit services deliver an exhaustive review of your systems and operations to identify and address compliance gaps. Our approach includes comprehensive verification steps, system testing, and documentation audits to ensure your processes align with current privacy and security regulations. We provide a clear path for maintaining compliance through proactive testing and remediation."

  },
  {
    index: 2,
    titleTop: "Assessment ",
    titleBottom: "Services",
    img: c3,
    alt: "SEO",
    desc:"Our assessment services focus on privacy, security, and safety risk analysis, offering Data Protection Impact Assessments (DPIA), Risk Operations Protection Assessments (RoPA), and Privacy Impact Assessments (PIA). Each assessment includes thorough testing and verification steps to validate system security, data protection, and risk mitigation measures. With our expert-led evaluations, you receive actionable insights to strengthen compliance, backed by rigorous testing protocols."
  },
  /*
{
  index: 1,
  titleTop: "Email",
  titleBottom: "Marketing",
  img: c4,
  alt: "SEO",
  link: "https://google.com",
},
{
  index: 2,
  titleTop: "Content",
  titleBottom: "Creation",
  img: c5,
  alt: "SEO",
  link: "https://google.com",
},
{
  index: 3,
  titleTop: "Analytics and",
  titleBottom: "Tracking",
  img: c6,
  alt: "SEO",
  link: "https://google.com",
}
*/
];

const description =
  "In addition to our GoSeqr product, Goismo offers specialized services to support engineering, compliance audits, and assessments, with a focus on robust testing and verification.";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-2 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            desc={card.desc}
          />
        ))
      }
    </div>
  </div>
</Section>
